{
  "name": "@rejected-media/podcast-framework-sanity-schema",
  "version": "1.1.0",
  "description": "Base Sanity schemas for podcast framework with extension support",
  "author": "Rex Kirshner",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./dist/schemas/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "sanity": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "sanity": "^4.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "podcast",
    "sanity",
    "cms",
    "schema"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rejected-media/podcast-framework.git",
    "directory": "packages/sanity-schema"
  }
}
