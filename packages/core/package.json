{
  "name": "@rejected-media/podcast-framework-core",
  "version": "0.1.3",
  "description": "Core components, layouts, and utilities for podcast websites",
  "author": "Rex Kirshner",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": "./src/components/*",
    "./layouts/*": "./src/layouts/*",
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./styles/*": "./src/styles/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "astro check --watch",
    "build": "tsup && tsc --emitDeclarationOnly --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src"
  },
  "peerDependencies": {
    "@sanity/client": "^6.0.0 || ^7.0.0",
    "astro": "^5.0.0",
    "resend": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "resend": {
      "optional": true
    },
    "@sentry/astro": {
      "optional": true
    },
    "@sentry/node": {
      "optional": true
    }
  },
  "devDependencies": {
    "@sanity/client": "^7.12.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "astro": "^5.1.1",
    "eslint": "^9.37.0",
    "resend": "^6.1.3",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.20",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "podcast",
    "astro",
    "framework",
    "cms",
    "sanity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rejected-media/podcast-framework.git",
    "directory": "packages/core"
  }
}
